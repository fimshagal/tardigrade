{
  "name": "tardigrade-store",
  "version": "1.1.22",
  "description": "A simple state management library",
  "main": "dist/tardigrade.store.cjs.js",
  "module": "index.js",
  "browser": "dist/tardigrade.store.iife.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preprocessing": "node processing/update.version",
    "postprocessing": "node processing/create.index",
    "build": "npm run clean && npm run preprocessing && vite build && tsc --emitDeclarationOnly --project tsconfig.json && npm run postprocessing",
    "clean": "rimraf dist",
    "dev": "vite",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "npmpub": "npm publish --access public"
  },
  "exports": {
    ".": {
      "require": "./dist/tardigrade.store.cjs.js",
      "import": "./index.js",
      "browser": "./dist/tardigrade.store.iife.js",
      "default": "./dist/tardigrade.store.es.js"
    }
  },
  "author": "fSha",
  "license": "CHECK LICENSE IN LICENSE FILE",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.6.2",
    "vite": "^4.5.0",
    "vite-plugin-banner": "^0.8.0"
  }
}
